<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteY="1dp"
            tools:layout_editor_absoluteX="1dp"
            tools:ignore="MissingConstraints">
        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:backgroundTint="#f0c419"

                app:cardCornerRadius="10dp"
                app:cardElevation="3dp"
                app:cardUseCompatPadding="true"
        >
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"

            >

                <LinearLayout
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:layout_editor_absoluteY="1dp"
                        tools:layout_editor_absoluteX="251dp">
                    <ImageView
                            android:id="@+id/game1Icon"
                            android:layout_width="118dp"
                            android:layout_height="162dp"
                            android:src="@drawable/butterfly"
                            android:padding="15dp"

                            android:layout_gravity="center"
                    />
                    <TextView
                            android:id="@+id/game1Title"
                            android:layout_width="wrap_content"
                            android:layout_height="70dp"
                            android:text="나비효과: 시간 설계자"
                            android:textStyle="bold"
                            android:textSize="30dp"
                            android:textAlignment="center"

                            android:layout_gravity="center"/>
                    <TextView
                            android:id="@+id/game1Explain"
                            android:layout_width="341dp"
                            android:layout_height="wrap_content"
                            android:text="스릴 넘치는 역사 조작 게임. 과거로 돌아가 세상을 마음대로 주무르세요."
                            android:textStyle="bold"
                            android:textSize="14dp"
                            android:textColor="#666666"
                            android:layout_gravity="center"
                    />
                    <Button
                            android:text="입장"
                            android:textStyle="bold"
                            android:layout_width="183dp"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#51461B"
                            android:id="@+id/Button1"
                            android:layout_gravity="center"/>
                </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:backgroundTint="#ef4f59"

                app:cardCornerRadius="10dp"
                app:cardElevation="3dp"
                app:cardUseCompatPadding="true"
        >
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
            >

                <LinearLayout
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:layout_editor_absoluteY="1dp"
                        tools:layout_editor_absoluteX="201dp">
                    <ImageView
                            android:id="@+id/game2Icon"
                            android:layout_width="118dp"
                            android:layout_height="138dp"
                            android:src="@drawable/ship"
                            android:padding="10dp"
                            android:layout_gravity="center"

                    />
                    <TextView
                            android:id="@+id/game2Title"
                            android:layout_width="wrap_content"
                            android:layout_height="82dp"
                            android:text="타이타닉 구명정"
                            android:textStyle="bold"
                            android:textSize="30dp"
                            android:textAlignment="center"
                            android:layout_gravity="center"

                    />
                    <TextView
                            android:id="@+id/game2Explain"
                            android:layout_width="328dp"
                            android:layout_height="36dp"
                            android:textStyle="bold"
                            android:textSize="14dp"
                            android:textColor="#494040"
                            android:layout_gravity="center"
                            android:text="위기의 타이타닉에서 인류애와 전략으로 생명을 구하라."

                    />
                    <Button
                            android:text="입장"
                            android:textStyle="bold"
                            android:layout_width="183dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/Button2"
                            android:backgroundTint="#931D25"
                            android:layout_gravity="center"
                    />
                </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>