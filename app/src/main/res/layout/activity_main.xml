<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="409dp"
            android:layout_height="729dp" tools:layout_editor_absoluteY="1dp" tools:layout_editor_absoluteX="1dp"
            tools:ignore="MissingConstraints">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:padding="10dp">
            <ImageView
                android:id="@+id/game1Icon"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:src="@drawable/butterfly"
                android:padding="15dp"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <TextView
                android:id="@+id/game1Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="나비효과: 시간 설계자"
                android:textSize="18dp"
                android:layout_marginTop="6dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/game1Icon"/>
            <TextView
                android:id="@+id/game1Explain"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:textSize="11dp"
                android:textColor="#666666"
                android:text="스릴 넘치는 역사 조작 게임. 상징적인 이벤트를 변화시켜 보세요!"
                app:layout_constraintTop_toBottomOf="@id/game1Title"
                app:layout_constraintLeft_toRightOf="@+id/game1Icon"/>

            <Button
                android:text="입장"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/Button1"
                app:layout_constraintRight_toRightOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:padding="10dp">
            <ImageView
                android:id="@+id/game2Icon"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:src="@drawable/ship"
                android:padding="10dp"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <TextView
                android:id="@+id/game2Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="타이타닉 구명정"
                android:textSize="18dp"
                android:layout_marginTop="6dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/game2Icon"/>
            <TextView
                android:id="@+id/game2Explain"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:textSize="11dp"
                android:textColor="#666666"
                android:text="위기의 타이타닉에서 인류애와 전략으로 생명을 구하라."
                app:layout_constraintTop_toBottomOf="@id/game2Title"
                app:layout_constraintLeft_toRightOf="@+id/game2Icon"/>

            <Button
                android:text="입장"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/Button2"
                app:layout_constraintRight_toRightOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>